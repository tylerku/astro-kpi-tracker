datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Crm {
  id        Int      @id @default(autoincrement())
  user      User?    @relation(fields: [userId], references: [id])
  accessToken String
  expiration   DateTime
  refreshToken String
  crmType String
  userId  Int?
  crmUserId String   @unique
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  authProviderId String
  firstName  String?
  lastName   String?
  crms   Crm[]  // Optional: Add this to define the back relation
}